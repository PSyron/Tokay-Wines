<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_bg</item>
        <item name="android:titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
    </style>

    <style name="MyActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ab_text</item>
    </style>

    <style name="SettingsBookmark" parent="@android:style/Widget.TextView" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/filter_text</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ItemCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorMultiple</item>
    </style>

    <style name="ItemFilterText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ItemFilterText.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="ItemCustomLayout">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="DetailsHeader" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="DetailsHeader.BoldText">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="DetailsHeader.NormalText">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="DetailsHeader.NormalText.Small">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="DetailsHeader.NormalText.Small.Producer">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="DetailsHeader.Bookmark">
        <item name="android:textColor">@color/filter_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/divider_filter</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DetailsButton" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/filter_text</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="FilterCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin"> 8dp </item>
    </style>

</resources>