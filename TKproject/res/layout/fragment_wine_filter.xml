<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/wine_taste_lL"
                style="@style/ItemCustomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divider_item"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/wine_taste_tV"
                    style="@style/ItemFilterText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wine_taste" />

                <TextView
                    android:id="@+id/wine_taste_small_tV"
                    style="@style/ItemFilterText.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/any" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wine_type_lL"
                style="@style/ItemCustomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divider_item"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/wine_type_tV"
                    style="@style/ItemFilterText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wine_type" />

                <TextView
                    android:id="@+id/wine_type_small_tV"
                    style="@style/ItemFilterText.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/any" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wine_strain_lL"
                style="@style/ItemCustomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divider_item"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/wine_strain_tV"
                    style="@style/ItemFilterText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wine_strain" />

                <TextView
                    android:id="@+id/wine_strain_small_tV"
                    style="@style/ItemFilterText.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/any" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wine_year_lL"
                style="@style/ItemCustomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divider_item"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/wine_year_tV"
                    style="@style/ItemFilterText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wine_year" />

                <TextView
                    android:id="@+id/wine_type_year_tV"
                    style="@style/ItemFilterText.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/any" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wine_producer_lL"
                style="@style/ItemCustomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divider_item"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/wine_producer_tV"
                    style="@style/ItemFilterText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wine_produder" />

                <TextView
                    android:id="@+id/wine_producer_small_tV"
                    style="@style/ItemFilterText.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/any" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wine_price_lL"
                style="@style/ItemCustomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divider_item"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/wine_price_tV"
                    style="@style/ItemFilterText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wine_price_range" />

                <TextView
                    android:id="@+id/wine_price_small_tV"
                    style="@style/ItemFilterText.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/any" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/wine_search_btn"
        style="@style/DetailsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="@string/search"
        android:textSize="20dp" />

</LinearLayout>