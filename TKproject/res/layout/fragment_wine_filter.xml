<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/frag_wine_taste_lL"
                style="@style/ItemCustomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divider_item"
                android:orientation="vertical" >

                <TextView
                    style="@style/ItemFilterText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wine_taste" />

                <TextView
                    android:id="@+id/frag_wine_taste_tV"
                    style="@style/ItemFilterText.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/any" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frag_wine_type_lL"
                style="@style/ItemCustomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divider_item"
                android:orientation="vertical" >

                <TextView
                    style="@style/ItemFilterText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wine_type" />

                <TextView
                    android:id="@+id/frag_wine_type_tV"
                    style="@style/ItemFilterText.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/any" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frag_wine_strain_lL"
                style="@style/ItemCustomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divider_item"
                android:orientation="vertical" >

                <TextView
                    style="@style/ItemFilterText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wine_strain" />

                <TextView
                    android:id="@+id/frag_wine_strain_tV"
                    style="@style/ItemFilterText.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/any" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frag_wine_year_lL"
                style="@style/ItemCustomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divider_item"
                android:orientation="vertical" >

                <TextView
                    style="@style/ItemFilterText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wine_year" />

                <TextView
                    android:id="@+id/frag_wine_year_tV"
                    style="@style/ItemFilterText.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/any" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frag_wine_producer_lL"
                style="@style/ItemCustomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divider_item"
                android:orientation="vertical" >

                <TextView
                    style="@style/ItemFilterText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wine_produder" />

                <TextView
                    android:id="@+id/frag_wine_producer_tV"
                    style="@style/ItemFilterText.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/any" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frag_wine_price_lL"
                style="@style/ItemCustomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divider_item"
                android:orientation="vertical" >

                <TextView
                    style="@style/ItemFilterText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wine_price_range" />

                <TextView
                    android:id="@+id/frag_wine_price_tV"
                    style="@style/ItemFilterText.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/any" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/frag_wine_search_btn"
            style="@style/DetailsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="8dp"
            android:text="@string/search"
            android:layout_margin="0dp"
            android:textSize="24dp" />
    </RelativeLayout>

</LinearLayout>