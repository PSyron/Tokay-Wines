<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/activity_news_details_name"
            style="@style/DetalisHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title" />

        <ImageView
            android:id="@+id/activity_news_details_image"
            android:layout_width="@dimen/details_image_dimen"
            android:layout_height="@dimen/details_image_dimen"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/placeholder_image" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/DetalisBoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/news_details_date" />

                <TextView
                    android:id="@+id/activity_news_details_date"
                    style="@style/DetalisNormalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data" />
            </TableRow>

            <ImageView
                android:layout_width="@dimen/item_menu_height"
                android:layout_height="@dimen/item_menu_height"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:src="@drawable/placeholder_image" />
        </RelativeLayout>

        <TextView
            android:id="@+id/activity_news_details_description"
            style="@style/DetalisNormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description" />
    </LinearLayout>

</ScrollView>