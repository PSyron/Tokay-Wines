        <activity
            android:name="pl.tokajiwines.activities.ProducerActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="pl.tokajiwines.activities.WinesGridViewActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="pl.tokajiwines.activities.NearPlaceActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="pl.tokajiwines.activities.NavigateToActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="pl.tokajiwines.activities.HotelActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="pl.tokajiwines.activities.RestaurantActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="pl.tokajiwines.activities.WineActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="pl.tokajiwines.activities.AboutAppActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="pl.tokajiwines.activities.ProducersSearchActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="pl.tokajiwines.activities.HotelsSearchActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
